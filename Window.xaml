<Window
	x:Class="Dockish.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dockish="clr-namespace:Dockish"
	xmlns:modules="clr-namespace:Dockish.Modules"
	AllowsTransparency="True"
	Background="Transparent"
	Topmost="True"
	WindowState="Maximized"
	WindowStyle="None">

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="./DockStyles.xaml" />

				<ResourceDictionary Source="./Modules/ClockStyles.xaml" />
				<ResourceDictionary Source="./Modules/MediaStyles.xaml" />
			</ResourceDictionary.MergedDictionaries>

		</ResourceDictionary>
	</Window.Resources>

	<Grid Margin="7">

		<Path
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Fill="Black">
			<Path.Data>
				<CombinedGeometry GeometryCombineMode="Exclude">
					<CombinedGeometry.Geometry1>
						<RectangleGeometry Rect="0,0 16,16" />
					</CombinedGeometry.Geometry1>
					<CombinedGeometry.Geometry2>
						<EllipseGeometry
							Center="16,16"
							RadiusX="16"
							RadiusY="16" />
					</CombinedGeometry.Geometry2>
				</CombinedGeometry>
			</Path.Data>
		</Path>

		<Path
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Fill="Black">
			<Path.Data>
				<CombinedGeometry GeometryCombineMode="Exclude">
					<CombinedGeometry.Geometry1>
						<RectangleGeometry Rect="0,0 16,16" />
					</CombinedGeometry.Geometry1>
					<CombinedGeometry.Geometry2>
						<EllipseGeometry
							Center="0,16"
							RadiusX="16"
							RadiusY="16" />
					</CombinedGeometry.Geometry2>
				</CombinedGeometry>
			</Path.Data>
		</Path>

		<Path
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			Fill="Black">
			<Path.Data>
				<CombinedGeometry GeometryCombineMode="Exclude">
					<CombinedGeometry.Geometry1>
						<RectangleGeometry Rect="0,0 16,16" />
					</CombinedGeometry.Geometry1>
					<CombinedGeometry.Geometry2>
						<EllipseGeometry
							Center="16,0"
							RadiusX="16"
							RadiusY="16" />
					</CombinedGeometry.Geometry2>
				</CombinedGeometry>
			</Path.Data>
		</Path>

		<Path
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			Fill="Black">
			<Path.Data>
				<CombinedGeometry GeometryCombineMode="Exclude">
					<CombinedGeometry.Geometry1>
						<RectangleGeometry Rect="0,0 16,16" />
					</CombinedGeometry.Geometry1>
					<CombinedGeometry.Geometry2>
						<EllipseGeometry
							Center="0,0"
							RadiusX="16"
							RadiusY="16" />
					</CombinedGeometry.Geometry2>
				</CombinedGeometry>
			</Path.Data>
		</Path>

		<dockish:Dock VerticalAlignment="Top">
			<StackPanel Orientation="Horizontal">
				<modules:Media />
				<modules:Clock />
			</StackPanel>
		</dockish:Dock>

	</Grid>
</Window>
