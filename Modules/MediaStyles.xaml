<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:dockish="clr-namespace:Dockish"
	xmlns:modules="clr-namespace:Dockish.Modules"
	xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<ControlTemplate x:Key="MediaTemplate" TargetType="{x:Type modules:Media}">
		<StackPanel Orientation="Horizontal">

			<TextBlock FontFamily="pack://application:,,,/resources/#icomoon" Text="{TemplateBinding PlayerIcon}" Margin="3"/>

			<TextBlock Margin="4,0,0,0">
				<Run Text="{TemplateBinding Title}" />
				<Run Text=" : " />
				<Run Text="{TemplateBinding Artist}" />
			</TextBlock>
		</StackPanel>
	</ControlTemplate>

	<Style TargetType="{x:Type modules:Media}">
		<Setter Property="Margin" Value="12,0" />
		<Setter Property="Template" Value="{StaticResource MediaTemplate}" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

</ResourceDictionary>
